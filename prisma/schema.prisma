generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Issue {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  issueNumber String
  title       String?
  description String?
  location    String
  issueType   IssueType
  status      Status    @default(OPEN)
  submittedAt DateTime  @default(now())
  solvedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("issues")
}

enum Status {
  OPEN
  SOLVED
}
enum IssueType {
  SLOWNESS
  NO_CONNECTION
  ON_OFF
  RELOCATION
  OFFLINE
  OTHER
}